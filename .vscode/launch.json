    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test realsense",
            "type": "debugpy",
            "request": "launch",
            "module": "rcsss",
            "console": "integratedTerminal",
            "args": ["realsense", "test", "config.yaml"],
            "justMyCode": true,
        },
        {
            "name": "Record with realsense",
            "type": "debugpy",
            "request": "launch",
            "module": "rcsss",
            "console": "integratedTerminal",
            "args": ["realsense", "test-record", "config.yaml"],
            "justMyCode": true,
        },
        {
            "name": "Debug python tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "args": ["-vv"],
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },

        // C++
        {
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/test_cam",
            // "args": ["arg1", "arg2"],
            // "environment": [{ "name": "config", "value": "Debug" }],
            "cwd": "${workspaceFolder}"
        },
    ]
}